{
    "name": "omnipay/payuni",
    "description": "payuni driver for the Omnipay payment processing library",
    "keywords": [
        "omnipay",
        "payuni"
    ],
    "homepage": "https://github.com/omnipay/payuni",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Yu-Hsien, Chou",
            "email": "slps970093@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Omnipay\\Payuni\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omnipay\\Payuni\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    }
}
